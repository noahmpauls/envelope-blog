{% extends "layouts/base.njk" %}

{% block content %}
<article id="post">
  <header>
    <h1>{{ title | addNbsp }}</h1>
    <p>{{ subtitle | addNbsp }}</p>
    <hr>
  </header>
  <p class="align-end"><em>{{ date | postDate }}</em></p>
  {{ content | safe }}
  <div class="signoff">
    <div>
      <p>{{ signoff }}</p>
      <p class="signature">{{ author }}</p>
    </div>
  </div>
</article>
{% endblock %}
